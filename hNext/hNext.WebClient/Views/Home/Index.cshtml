@inject Microsoft.Extensions.Localization.IStringLocalizer<Resources> Localizer
@model ApplicationViewModel

@{
    ViewData["Title"] = $"hNext — {Localizer[nameof(Resources.MedicalInformationSystem)]}";
}

<div class="d-flex flex-row justify-content-start">
    <nav>
        <ul class="nav nav-tabs flex-column">
            @foreach(var tab in Model.Tabs)
            {
                <li class="nav-item">
                    <a class="nav-link active side-tab-selector p-1" id="@String.Format("{0}Tab", tab.Key.ToLower())">
                        @tab.Value
                    </a>
                </li>
            }
        </ul>
    </nav>
    <main class="container-fluid flex-grow-1 main-panel">
        @foreach(var tab in Model.Tabs)
        {
            <div id="@String.Format("{0}Panel", tab.Key.ToLower())" class="d-flex flex-row flex-grow-1">
                @await Component.InvokeAsync(tab.Key)
            </div>
        }
    </main>
    <aside class="d-flex flex-row">
        <div>
            @foreach (var sideTab in Model.SideBar)
            {
                <div id='@String.Format("{0}SidePanel", sideTab.Key.ToLower())' class="d-flex flex-row flex-grow-1">
                    @await Component.InvokeAsync(sideTab.Key)
                </div>
            }
        </div>
        <nav>
            <ul class="nav nav-tabs flex-column">
                @foreach (var sideTab in Model.SideBar)
                {
                    <li class="nav-item">
                        <a class="nav-link active side-tab-selector p-1" id="@String.Format("{0}SideTab", sideTab.Key.ToLower())">
                            @sideTab.Value
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </aside>
</div>

@section Scripts
{
    @foreach(var tab in Model.Tabs)
    {

    }
}
