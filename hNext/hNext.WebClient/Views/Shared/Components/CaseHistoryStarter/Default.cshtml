@model  CaseHistory

<template id="case-history-starter-template">
    <form class="modal-window" :style="{zIndex:level*1000}">
        <div class="d-flex flex-column mb-1">
            <button class="btn btn-danger ml-auto" :disabled="!enabled" @@click.stop.prevent="cancel">
                <i class="fa fa-times"></i>
            </button>
        </div>
        <div class="flex-column show-panel modal-window-show-panel">
            <div class="d-flex flex-column">
                <div class="form-group row mx-0">
                    <label class="col-lg-6 col-form-label text-left text-lg-right" asp-for="DocumentRegistry.Number"></label>
                    <div class="col-lg-6">
                        <input class="form-control" asp-for="DocumentRegistry.Number" v-model="history.documentRegistry.number"/>
                    </div>
                </div>
                <div class="form-group row mx-0 align-items-lg-end">
                    <label asp-for="HospitalId" class="col-lg-6 col-form-label text-left text-lg-right"></label>
                    <div class="col-lg-6">
                        <div><span asp-validation-for="HospitalId" class="text-danger"></span></div>
                        <select asp-for="HospitalId" class="form-control" v-model="history.hospitalId">
                            <option value="">@Localizer[nameof(Resources.SelectHospital)]</option>
                            <option v-for="h in hospitals" :key="h.id" :value="h.id">
                                {{ h.name }}
                            </option>
                        </select>
                    </div>
                </div>
                <div class="form-group row mx-0">
                    <label asp-for="DepartmentId" class="col-lg-6 col-form-label text-left text-lg-right"></label>
                    <div class="col-lg-6">
                        <select asp-for="DepartmentId" class="form-control" v-model="history.departmentId">
                            <option value="">@Localizer[nameof(Resources.SelectDepartment)]</option>
                            <option v-for="d in departments" :key="d.id" :value="d.id">
                                {{ d.name }}
                            </option>
                        </select>
                    </div>
                </div>
                <div class="form-group row mx-0">
                    <label asp-for="Admitted" class="col-lg-6 col-form-label text-left text-lg-right"></label>
                    <div class="col-lg-6">
                        <div><span asp-validation-for="Admitted"></span></div>
                        <input asp-for="Admitted" class="form-control" v-model="history.admitted"/>
                    </div>
                </div>
            <div class="d-flex flex-row flex-nowrap justify-content-between justify-content-lg-end mt-2 mx-3">
                <button class="btn btn-primary" :disabled="!enabled" @@click.stop.prevent="save">@Localizer[nameof(Resources.Save)]</button>
                <button class="btn btn-danger ml-2" :disabled="!enabled" @@click.stop.prevent="cancel">@Localizer[nameof(Resources.Cancel)]</button>
            </div>
        </div>
    </form>
</template>
