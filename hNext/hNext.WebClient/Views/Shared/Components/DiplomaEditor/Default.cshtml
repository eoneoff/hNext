@model Diploma

<template id="diploma-editor-template">
    <form class="modal-window" :style="{zIndex: level*1000}">
        <confirmation-dialog v-if="showSaveConfirmation" :level="level+1" @@yes="$emit('save', diploma)" @@no="showSaveConfirmation = false">
            @Localizer[nameof(Resources.SaveAndExit)]?
        </confirmation-dialog>
        <confirmation-dialog v-if="showCancelConfirmation" :level="level+1" @@yes="$emit('cancel')" @@no="showCancelConfirmation = false">
            @Localizer[nameof(Resources.CancelAndExit)]?
        </confirmation-dialog>
        <div class="d-flex flex-column mb-1">
            <button class="btn btn-danger ml-auto" :disabled="!enabled" @@click.stop.prevent="cancel">
                <i class="fa fa-times"></i>
            </button>
        </div>
        <div class="d-flex flex-column show-panel modal-window-show-panel">
            <div class="d-flex flex-column">
                <div class="form-grop row mx-0 aling-itmes-lg-end my-1">
                    <label class="col-lg-5 col-form-label text-left text-lg-right" asp-for="Number"></label>
                    <div class="col-lg-7">
                        <div><span asp-validation-for="Number" class="text-danger"></span></div>
                        <input class="form-control" asp-for="Number" v-model="diploma.number"/>
                    </div>
                </div>
                <div class="form-grop row mx-0 aling-itmes-lg-end my-1">
                    <label class="col-lg-5 col-form-label text-left text-lg-right" asp-for="WhenIssued"></label>
                    <div class="col-lg-7">
                        <div><span asp-validation-for="WhenIssued" class="text-danger"></span></div>
                        <input class="form-control" asp-for="WhenIssued" v-model="diploma.whenIssued"/>
                    </div>
                </div>
                <div class="form-grop row mx-0 aling-itmes-lg-end my-1">
                    <label class="col-lg-5 col-form-label text-left text-lg-right" asp-for="University"></label>
                    <div class="col-lg-7">
                        <div><span asp-validation-for="University" class="text-danger"></span></div>
                        <input class="form-control" asp-for="University" v-model="diploma.university"/>
                    </div>
                </div>
                <div class="form-grop row mx-0 aling-itmes-lg-end my-1">
                    <label class="col-lg-5 col-form-label text-left text-lg-right" asp-for="Specialty"></label>
                    <div class="col-lg-7">
                        <div><span asp-validation-for="Specialty" class="text-danger"></span></div>
                        <input class="form-control" asp-for="Specialty" v-model="diploma.specialty"/>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row flex-nowrap justify-content-between justify-content-lg-end mt-2 mx-3">
                <button class="btn btn-primary" :disabled="!enabled" @@click.stop.prevent="save">@Localizer[nameof(Resources.Save)]</button>
                <button class="btn btn-danger ml-2" :disabled="!enabled" @@click.stop.prevent="cancel">@Localizer[nameof(Resources.Cancel)]</button>
            </div>
        </div>
    </form>
</template>
