@inject Microsoft.Extensions.Localization.IStringLocalizer<Resources> Localizer
@model ApplicationViewModel

<template id="main-view-template">
    <div class="d-flex flex-row justify-content-start align-items-stretch" v-cloak>
        <nav>
            <ul class="nav nav-tabs flex-column">
                @foreach (var tab in Model.Tabs)
                {
                    <li class="nav-item">
                        <a class="nav-link active side-tab-selector p-1" id="@($"{tab.Key.ToCamelCase()}Tab")">
                            @tab.Value
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <main class="container-fluid flex-grow-1 main-panel">
            <keep-alive>
                <component :is="selectedTab"></component>
            </keep-alive>
        </main>
        <aside class="d-flex flex-row">
            <div>
                <div class="d-flex flex-row flex-grow-1 h-100">
                    <keep-alive>
                        <component :is="selectedSideTab"></component>
                    </keep-alive>
                </div>
            </div>
            <nav>
                <ul class="nav nav-tabs flex-column">
                    @foreach (var sideTab in Model.SideBar)
                    {
                        <li class="nav-item">
                            <a class="nav-link active side-tab-selector p-1" id="@($"{sideTab.Key.ToCamelCase()}SideTab")">
                                @sideTab.Value
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </aside>
    </div>
</template>